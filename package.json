{
  "name": "payload-lucide-picker",
  "version": "1.0.0",
  "description": "A custom field for Payload CMS that allows you to select and configure Lucide icons in your admin panel",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run lint && pnpm run build"
  },
  "keywords": [
    "payload",
    "cms",
    "lucide",
    "icon",
    "picker",
    "field",
    "custom-field"
  ],
  "author": "vectras",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vectras/payload-lucide-picker.git"
  },
  "bugs": {
    "url": "https://github.com/Vectras/payload-lucide-picker/issues"
  },
  "homepage": "https://github.com/Vectras/payload-lucide-picker/blob/master/README.md",
  "peerDependencies": {
    "@payloadcms/ui": ">=3.0.0",
    "lucide-react": ">=0.0.0",
    "payload": ">=3.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "next": ">=15.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "payload": "^3.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "next": "^15.0.0"
  },
  "dependencies": {
    "@payloadcms/ui": "^3.0.0",
    "lucide-react": "^0.344.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}